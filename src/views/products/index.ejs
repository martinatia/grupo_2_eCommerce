<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
  <title>Página Principal</title>
</head>

<body>
  <%- include("../partials/header")%>
  <main>
    <div class="slider-frame">
      <ul>
          <li><img src="/img/utils/banner1.png" alt="Banner 1"></li>
          <li><img src="/img/utils/banner2.png "alt="Banner 2"></li>
      </ul>
  </div>
    <section class="sec-ofertas">
      
      <div class="titulos">
        <h3>Ofertas</h3>
        <i class="fas fa-arrow-left"></i>
        <i class="fas fa-arrow-right"></i>
      </div>

      <div class="productos">
        <% inSaleProducts.forEach((product) => { %>
          <article>
            
            <h4><%= product.name %></h4> <!-- Nombre del producto arriba de la imagen -->
            <img src="/img/mercaderia/<%= product.image %>"  />
              <div class="main-product">
                <i class="fas fa-cart-plus"></i>
                <h3 class="precioZapp">$ <%= product.price %></h3>  <!-- Precio del producto abajo de la imagen  -->
              </div>
            
          </article>
        <% }) %>
      </div>

    </section>
    <section class="sec-prod-destacados">
      
      <div class="titulos">
        <h3>Productos Destacados</h3>
        <i class="fas fa-arrow-left"></i>
        <i class="fas fa-arrow-right"></i>
      </div>

      <div class="productos">
        <% featuredProducts.forEach((product) =>{ %>
          
          <article>
            
            <h4><%= product.name %></h4>
            <img src="/img/mercaderia/<%= product.image %>"  />
              <div class="main-product">
                <i class="fas fa-cart-plus"></i>
                <h3 class="precioZapp">$ <%= product.price %></h3>
              </div>
            
          </article>
          
        <% } )%>
      </div>

    </section>
    <section class="sec-ultima-coleccion">
      
      <div class="titulos">
        <h3>Última Colección</h3>
        <i class="fas fa-arrow-left"></i>
        <i class="fas fa-arrow-right"></i>
      </div>

      <div class="productos">
        <% lastColectionProducts.forEach((product) =>{ %>
          
          <article>
            <h4><%= product.name %></h4>
            <img src="/img/mercaderia/<%= product.image %>"  />
            <div class="main-product">
              <i class="fas fa-cart-plus"></i>
              <h3 class="precioZapp">$ <%= product.price %></h3>
            </div>
            
          </article>
        
        <% } )%>
      </div>
    
    </section>
  </main>
  <%- include("../partials/footer")%>
</body>
 </html>