        <div class="contenedorDescripcion">
          <h2>Modelo: <%= product.name %>
          </h2>
          <h3 class="price">Precio: $<%= product.price %>
          </h3>
          <div>
            <label for="color">Colores disponibles:</label>
            <div class="contenedor-secundario">
              <% const availableColors=product.colors %>
                <% availableColors.forEach(color=> { %>
                  <label for="color">
                    <%= color %>
                      <input type="radio" name="color" value="<%= color %>" />
                  </label>
                  <% }); %>
            </div>
          </div>
          <label for="talles">
            <h3 class="tallesss">Talles disponibles</h3>
          </label>
          <select name="talles" id="talles">
            <% const availableSizes=product.sizes%>
              <% availableSizes.forEach((size)=>{ %>
                <option name="talles" id="talles" value="<%= size %>">
                  <%= size %>
                </option>

                <% }) %>
          </select>
          <div class="botonA침adir">
            <button onclick="window.location.href='./shopping-cart'">
              A침adir <i class="fas fa-shopping-cart"></i>
            </button>
          </div>
        </div>
      </div>

      <div class="descripcionTextual">
        <h1>Descripci칩n:</h1>
        <p>
          <%= product.description %>
        </p>
      </div>
    </form>
