<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/productList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
    <title>Lista de Productos</title>
</head>
<body>
    <%- include('../partials/smallHeader') %>
    <main>
        <div class="main-products">
            
            <!-- Panel superior para seleccionar todos los productos -->
            <div class="main-products-top-panel">

                <div class="main-product-top-panel-delete">

                    <input type="checkbox" name="product-delete-selected-all" id="product-delete-selected-all">
                    <form action="/product/deleteProduct/:<%= products.id %>?_method=PUT" method="POST">

                        <button type="submit">Eliminar</button>

                    </form>

                </div>
                

            </div>

            <div class="main-products-panel">

                <% for(let i = 0; i < products.length; i++){%>
                
                <div class="main-products-panel-container">

                    <div class="main-products-panel-detail">
                        
                        <input type="checkbox" name="product-delete-selected" id="product-delete-selected">
                        <img src="/img/mercaderia/<%= products[i].product_image_url %>" alt="imagen de producto">
    
                        <div class="main-product-panel-info">
                        
                            <span>#<%= products[i].product_id %></span>
                            <h3><%= products[i].product_name%></h3>
                            <span>size</span>
                            <span>stock</span>

                        </div>

                    </div>

                    

                    <div>
                    
                        <div class="main-product-panel-price">
                            <h4>$<%= products[i].product_price%></h4>
                        </div>

                    </div>

                    <div class="main-products-panel-forms">

                        <form action="/product/editProduct/:<%= products[i].id %>" method="GET">

                            <button type="submit">Modificar</button>

                        </form>

                        <form action="/product/deleteProduct/:<%= products[i].id %>?_method=PUT" method="POST">

                            <button type="submit">Eliminar</button>

                        </form>

                    </div>

                </div>
                
                <%}%>

            </div>

            <i class="fa-solid fa-ellipsis-vertical"></i>

        </div>
    </main>
    <%- include("../partials/smallFooter") %>
</body>
</html>