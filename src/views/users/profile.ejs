                <div class="profile-select">
                    <Label>Categoría:</Label>
                    <Select name="profile-category" id="profile-category">
                        
                        <option value="">---------------</option>
                        <% const categories = ['Comprador', 'Administrador'] %>
    
                        <% for( const category of categories){ %>
    
                            <option value="<%= category %>"
                                <% if(locals.user && user.user_type === category){%>
                                    selected
                                <% } %>>
                                <%= category %>
                            </option>
    
                        <% } %>
                        
                    </Select>
                </div>
    
                <div class="profile-select">
                    <input type="file" name="profile-image" id="image-profile">
                </div>

               
                <div class="bt-box-save">
                    <button class="bt-save" type="submit">Guardar</button>
                </div>
                
                <div class="profile-linea">
                    <div class="profile-line-left"></div>
                    <div class="profile-line-words">o</div>
                    <div class="profile-line-right"></div>
                </div>
    
            </form>

            <form class="profile-cerrar-sesion" action="/users/logout" method="POST">
                <button type="submit">Cerrar Sesión</button>
            </form>
        </div>
        
    </main>
    
