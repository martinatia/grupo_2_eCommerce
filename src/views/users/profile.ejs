                    <Label>Pais de Nacimiento:</Label>
                    <Select name="profile-country" id="profile-country">
                        
                        <option value="">---------------</option>
                        <% const countries = ['Argentina', 'Brasil', 'Uruguay'] %>
    
                        <% for( const country of countries){ %>
    
                            <option value="<%= country %>" 
                            <% if(locals.user && user.country === country){%>
                                selected
                            <% } %>>
                            <%= country %>
                            </option>
                            
                        <% } %>
    
                    </Select>
                </div>

                <div class="profile-select">
                    <Label>Provincia:</Label>
                    <Select name="profile-province" id="profile-province">
                        
                        <option value="">---------------</option>
                        <% const provinces = ['Santiago del Estero', 'Córdoba', 'Buenos Aires', 'Tucumán'] %>
    
                        <% for( const province of provinces){ %>
    
